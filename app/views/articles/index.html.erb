<h1 class='text-center my-4'>All the Articles (total <%= @articles.length %>)</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <% @articles.each do |article| %>
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 rounded">
          <div class="card-header">
            <p class="font-italic">By <%= article.user.username %></p>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: 'text-success' %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100 ) %></p>
            <%= link_to 'View', article_path(article.id), class: "btn btn-outline-success" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>Create ago: <%= time_ago_in_words(article.created_at) %>,
              edited ago: <%= time_ago_in_words(article.updated_at) %></small>
          </div>
        </div>
      </div>
    <% end%>
  </div>
</div>
<p><%= link_to 'Create new article', new_article_path %></p>
