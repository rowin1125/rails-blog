<div class="container">
  <%= render 'shared/errors', obj: @article%>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: 'shadow bg-info p-3 rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field  :title, class: 'form-control shadow rounded', placeholder: 'Title of article' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: 'col-2 col-form-label text-light' %> <br>
          <div class="col-10">
            <%= f.text_area :description, class: 'form-control shadow rounded', rows: 10, placeholder: 'Description of article' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back to overview', articles_path, class: 'row justify-content-center text-info mt-3' %>
</div>
