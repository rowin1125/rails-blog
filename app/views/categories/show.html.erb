<h1 class='text-center my-4'>Category: <%= @category.name %></h1>
<div class='text-center my-4'>
  <% if logged_in? && current_user.admin? %>
    <%= link_to 'Edit the category', edit_category_url(@category), class: 'btn btn-outline-info' %>
  <% end %>
</div>
<h3 class='text-center my-4'>Articles: </h3>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article'%>
