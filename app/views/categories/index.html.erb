<h1 class='text-center my-4'>Categories</h1>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-2">
        <div class="card text-center shadow mb-3 rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Create ago: <%= time_ago_in_words(category.created_at) %>,
              edited ago: <%= time_ago_in_words(category.updated_at) %></small>
          </div>
        </div>
      </div>
    </div>
  <% end%>
</div>
<div class="flickr_pagination mb-10">
  <%= will_paginate @categories, :container => false %>
</div>
