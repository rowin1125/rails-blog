<%= render 'shared/errors', obj: @category %>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(model: @category, class: 'shadow bg-info p-3 rounded', local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Category name", class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= f.text_field  :name, class: 'form-control shadow rounded', placeholder: 'Enter a category' %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
